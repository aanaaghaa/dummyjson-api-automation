{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product Schema",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "title": { "type": "string" },
    "price": { "type": "number" },
    "rating": { "type": "number" },
    "stock": { "type": "integer" },
    "brand": { "type": "string" },
    "category": { "type": "string" }
  },
  "required": ["id", "title", "price", "rating", "stock", "brand", "category"]
}
